<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"

    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ImageView
        android:id="@+id/imgView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="4dp"
    android:layout_below="@+id/tv_mFIO"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Базарбай Қожамохамед Рахимжанұлы"
    android:id="@+id/tv_mFIO"
    android:padding="1dp"
    android:textColor="@color/teal_700"
    android:textStyle="bold"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="12L_1"
        android:lines="1"
        android:id="@+id/tv_mClGrInn"
        android:padding="1dp"
        android:layout_below="@+id/tv_mFIO"
        android:layout_toEndOf="@+id/imgView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="биология, химия,  экономика"
        android:textStyle="italic"
        android:padding="1dp"
        android:id="@+id/tv_mSubject"
        android:layout_below="@+id/tv_mClGrInn"
        android:layout_toEndOf="@+id/imgView"
        />
</RelativeLayout>

</androidx.cardview.widget.CardView>